include ../dotMenu/dotMenu

mixin chatBodyHeader(chat)
    style
        include chatBodyHeader.css
    .chat-body-header.bd-bottom
        .chat-body-header__chat-info
            img(src=chat.img).chat-body-header__chat-img.bg_bright
            .chat-body-header__chat-name.text_main= chat.name
        .chat-body-header__options
            +dotMenu()
