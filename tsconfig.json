{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
